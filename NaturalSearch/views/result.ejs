        <!-- TABLE vusialization Section -->
        <p>
            <div id="search" class="bg-search text-topleft w3-padding-16 ">
              <div class="w3-display-down w3-margin-top">
                <h1 class="w3-xlarge w3-text-white"><span class="w3-padding w3-aqua w3-opacity-min"><b>NS</b></span>
                  <span class="w3-hide-small w3-text-white"><b>Resultados</b></span>
                  </h1>
                  </div>

                <div class="bg-search text-center ">
                    <form method="get" action="result" onsubmit="return valida_form(this)">
                        <label for="q"></label>
                        <br>
                    <br>
                        <input id="inputGroup-sizing-lg" name='q' type="text" size="60" style="height: 43px;" placeholder="Digite aqui..">
                        <button class="fas fa-search btn btn-info btn-lg w3-cyan" type="submit" value="result" onclick="search_form(q)">PESQUISAR
                        </button>
                    </form>
                    <script type="text/javascript" language="javascript">
                        function valida_form (){
                            if(document.getElementById("inputGroup-sizing-lg").value == ""){
                                alert('Por favor, preencha o campo de pesquisa!');
                                document.getElementById("inputGroup-sizing-lg").focus();
                            return false
                            }
                        }
                    </script>   
                </div>

              <br>
                <br>
        
            <div class = "table text-center ">
              <table id="example" class="stripe" style="width:100%">
                <thead>
                    <tr>
                        <th>Projeto</th>
                        <th>Proponente</th>
                        <th>√Årea</th>
                      <th data-orderable="false">Visualizar</th>
                    </tr>
                </thead>
                <script type="text/javascript">
                    function reply_click(clicked_value) {
                        
                        
                            var url = "relacionamento/" + clicked_value;
                            document.location = url;
                        
                    }
                </script>
                <tbody>
                        <% list_result.forEach(function(project) { %>
                            <tr>
                                <td><%= project.nome %></td>
                                <td><%= project.proponente %></td>
                                <td><%= project.segmento %></td>
                            <td><button class="fas fa-search-plus btn btn-info btn-lg" type="submit" value="<%= project.proponente %>"
                                    onclick=reply_click(this.value)> </td>
                            <% }); %>
                        </tr>
                    </tbody>
                  </table>
